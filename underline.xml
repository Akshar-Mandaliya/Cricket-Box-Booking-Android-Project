<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size android:height="2dp" /> <!-- Adjust thickness of underline here -->
        </shape>
    </item>
    <item android:top="2dp"> <!-- Adjust the position of the underline here -->
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Color of the underline -->
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Add a CardView to provide a border around content -->

    <!-- CardView with elevation and corner radius -->

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="#000000"
        android:padding="16dp"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="575dp"

        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- LinearLayout inside CardView for vertical arrangement -->
        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="571dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView for the Box -->

            <!-- TextView for Box Name -->
            <ImageView
                android:id="@+id/surendranagar_info_first"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/suratfirst" />

            <TextView
                android:id="@+id/box_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Cricket World Indoor Academy"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- TextView for Box Type -->
            <TextView
                android:id="@+id/box_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Indoor Cricket Academy"
                android:textSize="16sp" />

            <!-- TextView for Box Location -->
            <TextView
                android:id="@+id/box_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Location: Vesu, Surat"
                android:textSize="14sp" />

            <!-- TextView for Box Address -->
            <TextView
                android:id="@+id/box_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Address: VIP Road, Near Green City, Vesu, Surat"
                android:textSize="14sp" />

            <!-- TextView for Box Price -->
            <TextView
                android:id="@+id/box_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="Price: â‚¹800"
                android:textSize="14sp" />

            <!-- Book Now Button -->
            <Button
                android:id="@+id/book_now_button"
                android:layout_width="386dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:padding="12dp"
                android:text="Book Now"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="#000000"
        android:padding="16dp"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="9dp" />

    <!-- CardView with elevation and corner radius -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- LinearLayout inside CardView for vertical arrangement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView for the Box -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/rajkotfirst"
                android:id="@+id/rajkot_info_first"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <!-- TextView for Box Name -->
            <TextView
                android:id="@+id/box_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BDM Cricket Abdominal Guard"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- TextView for Box Type -->
            <TextView
                android:id="@+id/box_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Molded Cup Design"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- TextView for Box Location -->
            <TextView
                android:id="@+id/box_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Kaba Gandhi No Delo"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- TextView for Box Address -->
            <TextView
                android:id="@+id/box_address"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: BDM Outlet, Rajkot"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- TextView for Box Price -->
            <TextView
                android:id="@+id/box_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: â‚¹120"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Book Now Button -->
            <Button
                android:id="@+id/book_now_buttonrajkot"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:textSize="20sp"
                android:text="Book Now"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textStyle="bold"

                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
